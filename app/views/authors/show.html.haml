#author-profile
  = render "authors/author_header", :author => @display_author, :condensed => false, :post_header => false, :hide_word_count => false

  %hr.left.author-hr

  #author-posts
    - @posts.each do |post|
      .author-post
        = render "posts/post", :post => post
    .navigation
      - if @older_than
        .older
          %a{"href" => "#{@display_author.url}?b=#{@older_than}"} ← Older
      - if @newer_than
        .newer
          %a{"href" => "#{@display_author.url}?a=#{@newer_than}"} Newer →
